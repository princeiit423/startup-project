    /* General styles */
    body {
      margin: 0;
      font-family: 'Arial', sans-serif;
      color: #fff;
      background: #F7F9F2;
      overflow-x: hidden;
    }
    .navbar {
      font-family: 'Poppins', sans-serif;
      position: fixed;
      top: 0;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: linear-gradient(90deg, #6a11cb, #2575fc);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
      z-index: 1000;
      transition: background 0.3s ease-in-out;
      
    }

    .navbar .logo {
      font-size: 2rem;
      font-weight: bold;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-decoration: none;
    }

    .navbar ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
    }

    .navbar ul li {
      position: relative;
    }

    .navbar ul li a {
      color: #fff;
      text-decoration: none;
      font-size: 1rem; /* Medium font size */
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: color 0.3s ease-in-out;
    }

    .navbar ul li a:hover {
      color: #ffdd40;
    }

    /* Hamburger Menu */
    .menu-toggle {
      display: none;
      cursor: pointer;
      flex-direction: column;
      gap: 5px;
    }

    .menu-toggle div {
      width: 25px;
      height: 3px;
      background-color: #fff;
      border-radius: 2px;
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .menu-toggle.active div:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .menu-toggle.active div:nth-child(2) {
      opacity: 0;
    }

    .menu-toggle.active div:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .menu-toggle {
        display: flex;
      }

      .navbar ul {
        flex-direction: column;
        position: absolute;
        top: 70px;
        left: 0;
        width: 100%;
        background: #1c1c1c;
        padding: 1rem 0;
        transform: translateY(-100%);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease-in-out;
      }

      .navbar ul.active {
        transform: translateY(0);
        opacity: 1;
        visibility: visible;
      }

      .navbar ul li {
        margin: 1rem 0;
        text-align: center;
      }
    }

    /* Header Section */
    .portfolio-header {
      text-align: center;
      padding: 5.5rem 1rem;
      position: relative;
      margin-top: 3rem;
    }

    .header-title {
      font-size: clamp(2rem, 5vw, 3.5rem); /* Responsive font size */
      font-weight: bold;
      margin: 0;
      color: #111;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .header-subtitle {
      font-size: clamp(1rem, 3vw, 1.5rem); /* Responsive font size */
      margin-top: 0.8rem;
      color: #333;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Portfolio Gallery */
    .portfolio-gallery {
      display: grid;
      grid-template-columns: repeat(2, minmax(300px, 1fr));
      gap: 2rem;
      padding: 2rem;
    }

    .portfolio-item {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
      cursor: pointer;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    }

    .portfolio-item img {
      width: 100%;
      height: 700px; /* Portrait size */
      object-fit: cover;
      display: block;
      transition: transform 0.4s ease;
    }

    .portfolio-item:hover img {
      transform: scale(1.1);
    }

    .item-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .portfolio-item:hover .item-overlay {
      opacity: 1;
    }

    .item-overlay h3 {
      font-size: 1.5rem;
      margin: 0;
    }


    @media (max-width: 768px) {
        .portfolio-gallery {
          grid-template-columns: repeat(1, minmax(200px, 1fr)); /* Single column */
          gap: 1.5rem;
          padding: 1rem;
        }
      
        .portfolio-item img {
          height: 500px; /* Adjust image height */
        }
      
        .item-overlay h3 {
          font-size: 1.2rem;
        }
      }
      
      /* For phones and smaller devices */
