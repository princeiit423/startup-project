<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SOULART</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    /* Base Reset */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    /* Navbar Styling */
    .navbar {
      position: fixed;
      top: 0;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: linear-gradient(90deg, #6a11cb, #2575fc);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
      z-index: 1000;
      transition: background 0.3s ease-in-out;
    }

    .navbar .logo {
      font-size: 2rem;
      font-weight: bold;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-decoration: none;
    }

    .navbar ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
    }

    .navbar ul li {
      position: relative;
    }

    .navbar ul li a {
      color: #fff;
      text-decoration: none;
      font-size: 1rem;
      /* Medium font size */
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: color 0.3s ease-in-out;
    }

    .navbar ul li a:hover {
      color: #ffdd40;
    }

    /* Hamburger Menu */
    .menu-toggle {
      display: none;
      cursor: pointer;
      flex-direction: column;
      gap: 5px;
    }

    .menu-toggle div {
      width: 25px;
      height: 3px;
      background-color: #fff;
      border-radius: 2px;
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .menu-toggle.active div:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .menu-toggle.active div:nth-child(2) {
      opacity: 0;
    }

    .menu-toggle.active div:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .menu-toggle {
        display: flex;
      }

      .navbar ul {
        flex-direction: column;
        position: absolute;
        top: 70px;
        left: 0;
        width: 100%;
        background: #1c1c1c;
        padding: 1rem 0;
        transform: translateY(-100%);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease-in-out;
      }

      .navbar ul.active {
        transform: translateY(0);
        opacity: 1;
        visibility: visible;
      }

      .navbar ul li {
        margin: 1rem 0;
        text-align: center;
      }
    }

    body {
      background: linear-gradient(135deg, #e0c3fc, #8ec5fc);
    }

    .navbar-brand img {
      height: 50px;
    }

    .navbar-nav {
      margin-left: auto;
    }

    .navbar {
      margin-bottom: 2rem;
    }

    .boom {
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(135deg, #e0c3fc, #8ec5fc);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding-top: 7rem;
    }

    /* Order Page Styling */
    .order-page {
      width: 90%;
      max-width: 650px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      opacity: 0;
    }

    .title {
      font-size: 2.5rem;
      font-weight: 600;
      text-align: center;
      padding: 1.5rem;
      background-color: #8a2be2;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .order-form {
      padding: 2rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      font-weight: bold;
      color: #4a4a4a;
      margin-bottom: 0.5rem;
      display: inline-block;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 0.8rem;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 1rem;
      outline: none;
      color: #4a4a4a;
      transition: border 0.3s;
    }

    .form-group input:focus,
    .form-group select:focus {
      border-color: #8a2be2;
    }

    .price-section {
      text-align: center;
      margin: 2rem 0;
      display: flex;
      align-items: center;
      justify-content: center;
      justify-items: center;
      
    }

    .price-section h2 {
      font-size: 1.8rem;
      font-weight: 600;
      color: #8a2be2;
      text-align: center;
    }

    .order-btn {
      display: block;
      width: 100%;
      padding: 0.8rem;
      font-size: 1.2rem;
      font-weight: bold;
      background-color: #8a2be2;
      color: #ffffff;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .order-btn:hover {
      background-color: #6f1d9c;
    }

    .info-note {
      margin-top: 1rem;
      text-align: center;
      font-size: 0.9rem;
      color: #777;
    }

    .art-preview-section {
      text-align: center;
      padding: 3rem 1rem;
      background-color: #f8f8f8;
      margin-top: 2rem;
    }

    .art-preview-section h2 {
      font-size: 2rem;
      color: #4a4a4a;
      margin-bottom: 0.5rem;
    }

    .art-preview-section p {
      font-size: 1rem;
      color: #6a6a6a;
      margin-bottom: 1.5rem;
    }

    /* Upload Area Styling */
    .upload-area {
      margin: 1.5rem 0;
      position: relative;
    }

    #uploadImage {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .upload-label {
      background-color: #7808d0;
      color: white;
      padding: 10px 20px;
      border-radius: 20px;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s ease;
      display: inline-block;
    }

    .upload-label:hover {
      background-color: #5900a5;
    }

    /* Preview Container Styling */
    .preview-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .preview-image {
      margin-top: 1.5rem;
      max-width: 70%;
      /* Responsive width for larger screens */
      height: auto;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .style-button {
      margin-top: 1rem;
      padding: 10px 20px;
      background-color: #7808d0;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;
    }

    .style-button:hover {
      background-color: #5900a5;
    }

    /* Responsive Styling */
    @media (max-width: 768px) {
      .art-preview-section h2 {
        font-size: 1.5rem;
      }

      .art-preview-section p {
        font-size: 0.9rem;
      }

      .preview-image {
        max-width: 80%;
        /* Medium size for tablets */
      }
    }

    @media (max-width: 480px) {
      .art-preview-section h2 {
        font-size: 1.3rem;
      }

      .preview-image {
        max-width: 90%;
        /* Smaller size for mobile */
      }

      .style-button {
        padding: 8px 16px;
        font-size: 0.9rem;
      }
    }

    .contact-us {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 40px 20px;
      background-color: #f9f9f9;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      margin: 20px 0;
    }

    .contact-info {
      flex: 1;
      margin-right: 20px;
    }

    .contact-info h2 {
      font-size: 2.5rem;
      color: #333;
    }

    .contact-info p {
      font-size: 1.1rem;
      color: #555;
      margin-bottom: 20px;
    }

    .info-item {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
    }

    .info-item i {
      font-size: 1.5rem;
      color: #7808d0;
      margin-right: 10px;
    }

    .contact-form {
      flex: 1;
      background-color: #ffffff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .contact-form h3 {
      font-size: 2rem;
      margin-bottom: 20px;
    }

    .contact-form input,
    .contact-form textarea {
      width: 100%;
      padding: 12px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 1rem;
    }

    .contact-form textarea {
      height: 100px;
    }

    .contact-form button {
      background-color: #7808d0;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 12px 20px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .contact-form button:hover {
      background-color: #000;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .contact-us {
        flex-direction: column;
      }

      .contact-info {
        margin-right: 0;
        margin-bottom: 20px;
      }
    }

    .footer {
      background-color: #f4f4f4;
      padding: 40px 20px;
      color: #333;
      text-align: left;
    }

    .footer-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      max-width: 1200px;
      margin: auto;
    }

    .footer-column {
      flex: 1;
      min-width: 220px;
      margin: 10px;
    }

    .footer-column h3 {
      font-size: 1.5rem;
      color: #7808d0;
      margin-bottom: 15px;
    }

    .footer-column p {
      font-size: 0.9rem;
      margin-bottom: 10px;
    }

    .footer-column ul {
      list-style: none;
      padding: 0;
    }

    .footer-column ul li {
      margin-bottom: 8px;
    }

    .footer-column ul li a {
      color: #333;
      text-decoration: none;
    }

    .footer-column ul li a:hover {
      text-decoration: underline;
    }

    .social-icons a {
      margin-right: 10px;
    }

    .footer-bottom {
      text-align: center;
      margin-top: 20px;
      font-size: 0.9rem;
      border-top: 1px solid #ddd;
      padding-top: 20px;
    }

    .footer-bottom p {
      margin: 5px 0;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .footer-container {
        flex-direction: column;
        align-items: center;
      }

      .footer-column {
        margin: 15px 0;
        text-align: center;
      }
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar">
    <img class="logo" style="height:80px;" src="startup_logo.jpg" >
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/gallery">Gallery</a></li>
      <li><a href="/order">Order Art</a></li>
      <li><a href="/about">About Us</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
    <div class="menu-toggle">
      <div></div>
      <div></div>
      <div></div>
    </div>
  </nav>



  <section class="boom">
    <div class="order-page">
      <h1 class="title">Order Your Custom Portrait</h1>
      <form method="post" action="/order" id="orderForm" class="order-form">
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
          <label for="upload">Upload Image</label>
          <input type="file" id="upload" name="upload" accept="image/*" required>
        </div>

        <div class="form-group">
          <label for="artType">Select Type of Art</label>
          <select id="artType" name="artType" onchange="updatePrice()" required>
            <option value="0">Select Art Type</option>
            <option value="30">Charcoal Portrait</option>
            <option value="40">Pastel Color Portrait</option>
            <option value="50">Pencil Sketch Portrait</option>
          </select>
        </div>

        <div class="form-group">
          <label for="frameSize">Select Frame Size</label>
          <select id="frameSize" name="frameSize" onchange="updatePrice()" required>
            <option value="50">Small (8x10)</option>
            <option value="100">Medium (12x16)</option>
            <option value="150">Large (16x20)</option>
          </select>
        </div>

        <div class="form-group">
          <label for="faces">Number of Faces in Portrait</label>
          <select id="numFaces" name="numFaces" onchange="updatePrice()" required>
            <option value="1">1 Face</option>
            <option value="2">2 Faces</option>
            <option value="3">3 Faces</option>
          </select>
        </div>

        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" id="address" name="address" required>
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
          <label for="contact">Contact Number</label>
          <input type="tel" id="contactNumber" name="contactNumber" required>
        </div>

        <div class="form-group">
          <label for="whatsapp">WhatsApp Number</label>
          <input type="tel" id="whatsappNumber" name="whatsappNumber">
        </div>

        <div class="price-section">
          <h2>Total Price: $<input style="border: transparent; color: #7808d0; width: 4rem;" type="number" id="price" name="price" value="50" readonly></h2>

        </div>

        <button type="submit" class="order-btn">Place Order</button>
        <p class="info-note">* Don't worry, you don't need to pay now. Our executive will contact you for payment, and
          you can cancel the order at that time if needed.</p>
      </form>
    </div>
  </section>

  <section class="art-preview-section">
    <h2>Preview Your Art</h2>
    <p>Upload a photo to see how it would look in your chosen art style!</p>

    <!-- File upload area -->
    <div class="upload-area">
      <input type="file" id="uploadImage" accept="image/*" onchange="displayImage(event)">
      <label for="uploadImage" class="upload-label">Choose Photo</label>
    </div>

    <!-- Preview container -->
    <div class="preview-container">
      <img id="previewImage" class="preview-image" alt="Your Art Preview" style="display: none;">
      <button id="styleButton" class="style-button" onclick="applyArtStyle()">Apply Art Style</button>
    </div>
  </section>

  <section>
    <div class="contact-us">
      <div class="contact-info">
        <h2>Get in Touch</h2>
        <p>We'd love to hear from you! Whether you have a question, need assistance, or want to share your feedback,
          feel free to reach out.</p>
        <div class="info-item">
          <i class="fas fa-phone-alt"></i>
          <span>+1 234 567 890</span>
        </div>
        <div class="info-item">
          <i class="fas fa-envelope"></i>
          <span>info@yourwebsite.com</span>
        </div>
        <div class="info-item">
          <i class="fas fa-map-marker-alt"></i>
          <span>Your Address, City, Country</span>
        </div>
      </div>
      <form class="contact-form">
        <h3>Contact Form</h3>
        <input type="text" placeholder="Your Name" required />
        <input type="email" placeholder="Your Email" required />
        <textarea placeholder="Your Message" required></textarea>
        <button type="submit" class="button">Send Message</button>
      </form>
    </div>
  </section>

  <section>
    <footer class="footer">
      <div class="footer-container">
        <div class="footer-column">
          <h3>About Us</h3>
          <p>Custom Portrait Services specializes in personalized hand-drawn portraits tailored to your needs. We aim to
            bring your cherished memories to life with exceptional artistry.</p>
        </div>
        <div class="footer-column">
          <h3>Quick Links</h3>
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Portfolio</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">FAQs</a></li>
            <li><a href="#">Contact Us</a></li>
          </ul>
        </div>
        <div class="footer-column">
          <h3>Contact Us</h3>
          <p>Email: <a href="mailto:support@customportraits.com">support@customportraits.com</a></p>
          <p>Phone: <a href="tel:+1234567890">+1 (234) 567-890</a></p>
          <p>Address: 123 Art Lane, Kolkata, India</p>
        </div>
        <div class="footer-column">
          <h3>Follow Us</h3>
          <div class="social-icons">
            <a href="#" aria-label="Facebook"><img src="facebook-icon.png" alt="Facebook"></a>
            <a href="#" aria-label="Instagram"><img src="instagram-icon.png" alt="Instagram"></a>
            <a href="#" aria-label="Twitter"><img src="twitter-icon.png" alt="Twitter"></a>
            <a href="#" aria-label="LinkedIn"><img src="linkedin-icon.png" alt="LinkedIn"></a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2024 Custom Portrait Services. All rights reserved.</p>
        <p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
      </div>
    </footer>
  </section>



  <script>
    const menuToggle = document.querySelector('.menu-toggle');
    const navbarLinks = document.querySelector('.navbar ul');

    menuToggle.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      navbarLinks.classList.toggle('active');
    });


    // GSAP Entrance Animation
    gsap.to(".order-page", {
      opacity: 1,
      duration: 1.5,
      y: 0,
      ease: "power3.out"
    });

    const basePrice = 50;

    function updatePrice() {
      const artType = parseInt(document.getElementById("artType").value);
      const frameSize = parseInt(document.getElementById("frameSize").value);
      const faces = parseInt(document.getElementById("numFaces").value);
      const price = basePrice + artType + frameSize + (faces - 1) * 20;
      document.getElementById("price").value = price;
    }
    function displayImage(event) {
      const previewImage = document.getElementById('previewImage');
      previewImage.src = URL.createObjectURL(event.target.files[0]);
      previewImage.style.display = 'block';
    }

    function applyArtStyle() {
      const previewImage = document.getElementById('previewImage');
      // Example effect: applying grayscale and contrast filter for art style preview
      previewImage.style.filter = 'grayscale(100%) contrast(120%)';
      alert('Art style applied!');
    }



  </script>
</body>

</html>